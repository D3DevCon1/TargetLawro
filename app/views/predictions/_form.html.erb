<%= form_for(@prediction) do |f| %>
  <% if @prediction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@prediction.errors.count, "error") %> prohibited this prediction from being saved:</h2>

      <ul>
      <% @prediction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table>
  <thead>
    <th>Date</th>
	<th>Kick-Off</th>
	<th>Home Team</th>
	<th>Away Team</th>
	<th>Home</th>
    <th>Away</th>
  </thead>
  
  <% Fixture.where(:gameweek_id => 1).each do |fixture| %> 
  <tr>
    <td><%= fixture.match_date.strftime("%d/%m/%Y")%></td>
	<td><%= fixture.match_time.strftime("%H:%M") %></td>
	<td><%= fixture.home_team %></td> 
    <td><%= fixture.away_team %></td>
	<td><%= f.number_field :home_goals %></td>
    <td><%= f.number_field :away_goals %></td>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.hidden_field :fixture_id, :value => fixture.id %>
  </tr>
  <% end %>  
  </table>
    
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
