<h1>Listing predictions</h1>

<table>
  <thead>
    <th>User ID</th>
    <th>Fixture No</th>
    <th>Home Score</th>
    <th>Away Score</th>
	<th></th>
  </thead>

<% @predictions.each do |prediction| %>
  <tr>
    <td><%= prediction.user_id %></td>
    <td><%= prediction.fixture_no %></td>
    <td><%= prediction.home_score %></td>
    <td><%= prediction.away_score %></td>
    <td><%= link_to 'Show', prediction %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Prediction', new_prediction_path %>
