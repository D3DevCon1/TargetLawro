<h1>Listing predictions</h1>

<table>
  <tr>
    <th>User</th>
    <th>Fixture</th>
    <th>Home goals</th>
    <th>Away goals</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @predictions.each do |prediction| %>
  <tr>
    <td><%= prediction.user_id %></td>
    <td><%= prediction.fixture_id %></td>
    <td><%= prediction.home_goals %></td>
    <td><%= prediction.away_goals %></td>
    <td><%= link_to 'Show', prediction %></td>
    <td><%= link_to 'Edit', edit_prediction_path(prediction) %></td>
    <td><%= link_to 'Destroy', prediction, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

