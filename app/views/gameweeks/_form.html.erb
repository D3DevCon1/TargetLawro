<%= form_for @gameweek do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date, :order => [:day, :month, :year] %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.time_select :start_time %>
  </p>
  <p>
    <%= f.label :number_of_fixtures %><br />
    <%= f.number_field :number_of_fixtures %>
  </p>
  <table border=1>
  <thead>
    <th>Date</th>
	<th>Time</th>
	<th>Home Team</th>
	<th>Away Team</th>
	<th>Home Goals</th>
	<th>Away Goals</th>
  <thead>  
  <%= f.fields_for :fixtures do |builder| %>
    <%= render "fixture_fields", :f => builder %>
  <% end %>
  </table>
  <p><%= f.submit %></p>
<% end %>
