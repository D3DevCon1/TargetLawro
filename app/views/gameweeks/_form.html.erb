<%= form_for @gameweek do |f| %>
  <%= f.error_messages %>
  <div id="gameweekDetails">
  <div id="gameweekDate">
  <p>
    <b>Week Commences:</b><br />
    <%= f.date_select :start_date, :order => [:day, :month, :year] %>
  </p>
  </div>
  <div id="gameweekTime">
  <p>
    <b>Deadline:</b><br />
    <%= f.time_select :start_time %>
  </p>
  </div>
  <div id="gameweekFixtures">
  <p>
    <b>Fixtures:</b><br />
    <%= f.number_field :number_of_fixtures %>
  </p>
  </div>
  </div>
  <table border=1>
  <thead>
    <th>Date</th>
	<th>Time</th>
	<th>Home Team</th>
	<th>Away Team</th>
	<th>Home</th>
	<th>Away</th>
  <thead>  
  <%= f.fields_for :fixtures do |builder| %>
    <%= render "fixture_fields", :f => builder %>
  <% end %>
  </table>
  <p><%= f.submit %></p>
<% end %>
